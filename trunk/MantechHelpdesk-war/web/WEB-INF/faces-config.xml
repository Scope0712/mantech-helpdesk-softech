<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>tNewComplaintMB</managed-bean-name>
        <managed-bean-class>managedbean.TNewComplaintMB</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>tCategoryMB</managed-bean-name>
        <managed-bean-class>managedbean.TCategoryMB</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>tStatusMB</managed-bean-name>
        <managed-bean-class>managedbean.TStatusMB</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/admin/AssignComplaint.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>DETAIL</from-outcome>
            <to-view-id>/admin/AssignedComplDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/AssignedComplDetail.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>LIST</from-outcome>
            <to-view-id>/admin/AssignComplaint.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>tAccountMB</managed-bean-name>
        <managed-bean-class>managedbean.TAccountMB</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>tDepartmentMB</managed-bean-name>
        <managed-bean-class>managedbean.TDepartmentMB</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
